<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ItlaTv.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ItlaTv.Web.styles.css" asp-append-version="true" />
</head>
<body class="bg-black">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark  box-shadow mb-4">
            <div class="container">
                <a class="navbar-brand text-danger fw-bold fs-3" asp-area="" asp-controller="Home" asp-action="Index">ItlaTV+</a>
               
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link fs-5 text-light fw-semibold" asp-area="" asp-controller="Serie" asp-action="Index">Series</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link fs-5 text-light fw-semibold" asp-area="" asp-controller="Serie" asp-action="Index">Géneros</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link fs-5 text-light fw-semibold" asp-area="" asp-controller="Serie" asp-action="Index">Series</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container ">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class=" footer text-muted">
        <div class="container">
            <p class="text-light">&copy; @DateTime.Now.Year - ItlaTv+</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
